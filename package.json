{
  "name": "thelearningtablet",
  "version": "1.0.0",
  "description": "Graphics tablet controller with LitElement web components",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.build.json && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bengfarrell/thelearningtablet.git"
  },
  "dependencies": {
    "@spectrum-web-components/bundle": "^1.8.0",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@types/node": "^20.14.10",
    "@types/w3c-web-hid": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "happy-dom": "^14.12.3",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.2",
    "typescript": "~5.5.3",
    "vite": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
